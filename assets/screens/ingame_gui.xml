<Screen Id="ingameGui" VerticalAlignment="STRETCH" HorizontalAlignment="STRETCH" Rows="2">
    <Panel Id="toolBar" Row="0" Cols="5" VerticalAlignment="START" HorizontalAlignment="START" Padding="16,11">
        <ToolButton Id="btnBack" Texture="back" Col="0" VerticalAlignment="CENTER" Margin="8,0"/>
        <ToolButton Id="btnNew" Texture="new" Col="1" VerticalAlignment="CENTER" Margin="8,0"/>
        <ToolButton Id="btnOpen" Texture="open" Col="2" VerticalAlignment="CENTER" Margin="8,0"/>
        <ToolButton Id="btnSave" Texture="save" Col="3" VerticalAlignment="CENTER" Margin="8,0"/>
        <ToolButton Id="btnSettings" Texture="settings" Col="4" VerticalAlignment="CENTER" Margin="8,0"/>
    </Panel>
    <Panel Id="controlPanel" Row="1" Cols="3" VerticalAlignment="END" HorizontalAlignment="CENTER" Padding="16,11">
        <ToolButton Id="btnPlayPause" Texture="play" Col="0" VerticalAlignment="CENTER" Margin="8,0"/>
        <ToolButton Id="btnNextGen" Texture="next" Col="2" VerticalAlignment="CENTER" Margin="8,0"/>
    </Panel>
    <Panel Id="statusPanel1" Row="1" VerticalAlignment="END" HorizontalAlignment="END" Padding="16,8">
        <Label Id="lbLivingCells" Text="Cells: 0" FontSize="0.5" Col="0" Margin="16,0"/>
    </Panel>
    <Panel Id="statusPanel2" Row="1" VerticalAlignment="END" HorizontalAlignment="START" Padding="16,8">
        <Label Id="lbGeneration" Text="Gen: 0" FontSize="0.5" Col="0" Margin="16,0"/>
    </Panel>
</Screen>
